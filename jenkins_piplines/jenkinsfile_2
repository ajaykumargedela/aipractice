        stage('Build') {
            steps {
                echo 'Compiling application...'
                sh 'mvn clean package' // Using Maven to build
            }
        }
        stage('Test') {
            steps {
                echo 'Running unit tests...'
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying to Production...'
                // Example: Deploying to Kubernetes
                sh 'kubectl apply -f deployment.yaml' 
            }
        }
    }
}



